<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".QuestionSelectionScreen">
    <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="629dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="0dp" android:layout_marginRight="0dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="0dp"
            android:layout_marginStart="0dp" app:layout_constraintHorizontal_bias="0.545"
            android:id="@+id/questionRecyclerView" tools:layout_editor_absoluteY="8dp" android:layout_marginTop="20dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true" android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true" android:layout_below="@+id/textTopic"/>
    <Button
            android:text="Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button"
            app:layout_constraintTop_toBottomOf="@+id/questionRecyclerView" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="170dp" android:layout_marginRight="170dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.498" android:layout_marginTop="12dp"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="153dp"
            android:layout_marginStart="153dp" android:layout_alignParentLeft="true"
            android:layout_below="@+id/questionRecyclerView" android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"/>
    <TextView
            android:text="textTopic"
            android:layout_width="410dp"
            android:gravity="center"
            android:layout_height="wrap_content" android:id="@+id/textTopic" android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true" android:layout_marginRight="2dp" android:layout_marginEnd="2dp"
            android:layout_alignParentStart="true" android:layout_marginLeft="0dp" android:layout_marginStart="0dp"
            android:layout_alignParentLeft="true" android:layout_marginTop="4dp" android:layout_alignParentTop="true"
            android:textStyle="bold" android:textSize="14sp" android:layout_centerHorizontal="true"/>
</RelativeLayout>