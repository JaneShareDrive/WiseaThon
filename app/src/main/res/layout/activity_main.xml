<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/logintest"
        tools:context=".MainActivity">

    <Button
            android:text="@string/log_in"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="167dp" android:id="@+id/loginSubmit"
            android:layout_alignParentStart="true" android:layout_marginLeft="161dp" android:layout_marginStart="161dp"
            android:layout_alignParentLeft="true" android:layout_marginTop="550dp"
            android:layout_alignParentTop="true" android:textColor="#FFFFFF"
            android:background="@color/design_default_color_primary_dark" android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true" android:layout_marginRight="160dp" android:layout_marginEnd="160dp"
            android:layout_alignParentBottom="true" android:layout_marginBottom="133dp"/>
    <ImageView
            android:layout_width="118dp"
            android:layout_height="85dp" app:srcCompat="@drawable/wiselogo" android:id="@+id/imageView"
            android:layout_marginTop="5dp" android:layout_alignParentTop="true" android:layout_alignParentStart="true"
            android:layout_marginLeft="145dp" android:layout_marginStart="145dp" android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true" android:layout_alignParentRight="true"
            android:layout_marginRight="148dp" android:layout_marginEnd="148dp"/>
    <ImageView
            android:layout_width="163dp"
            android:layout_height="141dp" app:srcCompat="@drawable/cfl" android:id="@+id/imageView2"
            android:layout_alignParentStart="true" android:layout_marginLeft="125dp" android:layout_marginStart="125dp"
            android:layout_alignParentLeft="true" android:layout_marginTop="100dp"
            android:layout_alignParentTop="true" android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true" android:layout_marginRight="123dp" android:layout_marginEnd="123dp"
    />
    <EditText
            android:layout_width="281dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Name"
            android:ems="10"
            android:id="@+id/textUser" android:layout_alignParentStart="true" android:layout_marginLeft="65dp"
            android:layout_marginStart="65dp" android:layout_alignParentLeft="true" android:layout_marginTop="285dp"
            android:layout_alignParentTop="true" android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true" android:layout_marginRight="65dp" android:layout_marginEnd="65dp"/>
    <EditText
            android:layout_width="281dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:hint="Password"
            android:id="@+id/textPassword" android:layout_alignParentStart="true" android:layout_marginLeft="65dp"
            android:layout_marginStart="65dp" android:layout_alignParentLeft="true" android:layout_marginTop="362dp"
            android:layout_alignParentTop="true" android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true" android:layout_marginRight="65dp" android:layout_marginEnd="65dp"/>
    <RadioGroup
            android:layout_width="377dp"
            android:layout_height="45dp" android:layout_alignParentStart="true" android:layout_marginLeft="18dp"
            android:layout_marginStart="18dp" android:layout_alignParentLeft="true" android:layout_marginTop="416dp"
            android:orientation="horizontal"
            android:layout_alignParentTop="true" android:id="@+id/radioSelector" android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true" android:layout_marginRight="14dp" android:layout_marginEnd="14dp">
        <RadioButton
                android:text="Teacher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/radioTeacher" android:layout_weight="1"
                android:layout_alignStart="@+id/radioSelector" android:layout_above="@+id/radioSelector"
                android:layout_marginBottom="-430dp"/>
        <RadioButton
                android:text="Student"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/radioStudent" android:layout_weight="1"
                android:layout_alignTop="@+id/radioSelector" android:layout_alignEnd="@+id/radioSelector"/>
    </RadioGroup>

</RelativeLayout>