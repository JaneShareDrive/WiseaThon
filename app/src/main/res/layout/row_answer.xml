<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="wrap_content">

    <View
            android:id="@+id/divider"
            android:layout_width="395dp"
            android:layout_height="2dp"
            android:background="?android:attr/listDivider"
            tools:layout_editor_absoluteY="218dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="399dp"
            android:layout_height="wrap_content"
            android:id="@+id/textQuestPhrase"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:textStyle="bold"/>

    <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioGroup" android:layout_marginTop="8dp"
            android:gravity="left"
            app:layout_constraintTop_toBottomOf="@+id/textQuestPhrase" app:layout_constraintStart_toStartOf="parent"
    >
        <RadioButton
                android:text="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:layout_editor_absoluteX="150dp" android:id="@+id/radioButAns1" android:layout_marginTop="8dp"/>
        <RadioButton
                android:text="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:layout_editor_absoluteX="150dp" android:id="@+id/radioButAns2" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/radioButAns1"/>
        <RadioButton
                android:text="3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:layout_editor_absoluteX="150dp" android:id="@+id/radioButAns3" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/radioButAns2"/>
        <RadioButton
                android:text="4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:layout_editor_absoluteX="150dp" android:id="@+id/radioButAns4" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/radioButAns3"/>

    </RadioGroup>
</android.support.constraint.ConstraintLayout>